# Environment Variables for Pomodoro Timer App
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# Format: mongodb://username:password@host:port/database
# For local development: mongodb://localhost:27017/mongo-pomodoro-app
# For production: mongodb://username:password@your-mongodb-host:27017/database
MONGODB_URI=mongodb://localhost:27017/mongo-pomodoro-app

# JWT Secret Key (Generate a secure random string)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development 